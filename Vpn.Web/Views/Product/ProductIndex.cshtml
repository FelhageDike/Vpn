@model IEnumerable<Vpn.Web.Models.ProductDto>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col test-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="fas fade-plus"></i>Create new Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>

            </th>
            <th>
                Price
            </th>
            <th>

            </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>

                </td>


                <td>
                    @((item.Price).ToString("c"))
                </td>
                <td>
                    <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.Id">
                        <img width="20px" src="/Images/free-icon-edit-4007772.png" alt=""/>
                    </a>
                    <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.Id">
                        <img width="20px" src="/Images/free-icon-garbage-535246.png" alt=""/>
                    </a>
                </td>

            </tr>
        }
        </tbody>
    </table>

</div>